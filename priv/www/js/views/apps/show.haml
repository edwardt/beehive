%h2= application.name

%h4 Details

%table
  %thead
    %tr
      %th name
      %th branch
      %th template
      %th owners
      %th updated_at
      %th type
      %th deploy_env
      %th delete
  %tbody
    %tr
      %td= link_to(application.name, "#/apps/"+ application.name)
      %td= application.branch
      %td= application.template
      %td= application.owners
      %td= application.updated_at
      %td= application.dynamic
      %td= application.deploy_env
      %td= link_to("delete?", "#/apps/delete/"+ application.name)

%div 
  Clone your repo at:
  %code
    git clone 
    = application.clone_url

%div 
  Add a git remote to a current repo:
  %code
    git remote add beehive 
    = application.clone_url


:if application.latest_error != "undefined"
  %h4 Latest Error
  
  %table
    %thead
      %tr
        %th stage
        %th stderr
        %th stdout
        %th exit_status
        %th timestamp
    %tfoot
      %tr
        %td ...
    %tbody
      %tr
        %td= application.latest_error.stage
        %td= application.latest_error.stderr
        %td= application.latest_error.stdout
        %td= application.latest_error.exit_status
        %td= application.latest_error.timestamp
